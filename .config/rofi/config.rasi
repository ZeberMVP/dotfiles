

* {
  /* Default background color */
  background-color: #302d3e;
  text-color:       #c62841;
  font: "JetBrainsMono Bold 10";
}


window {
  padding: 1em;
  border-color: #302d3e;
  border:       5px;
  border-radius: 10px;
  background-color: #302d3e;

}

mainbox {
  spacing: 0px;
  children: [message,inputbar,listview];
}

message {
    enabled:                     true;
    margin:                      0px 100px;
    padding:                     15px;
    border:                      0px solid;
    border-radius:               15px;
    border-color:                inherit;
    background-color:            inherit;
    text-color:                  inherit;
    size:                        400em;
}
textbox {
    background-color:            inherit;
    text-color:                  inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
    placeholder-color:           inherit;
    blink:                       true;
    markup:                      true;
    size:                        400em;
    font: "JetBrainsMono Bold 15";

}
error-message {
    padding:                     12px;
    border:                      0px solid;
    border-radius:               0px;
    border-color:                inherit;
    background-color:            inherit;
    text-color:                  inherit;
}

element {
  background: transparent;
  children: [ element-icon, element-text ];
}
element,element-text,element-icon, button {
    cursor: pointer;
}

inputbar {
  margin: 0px 10px;
  spacing: 0.4em;
  border-color: #302d3e;
  border:        5px;
  background-color: #302d3e;
  children: [entry,overlay,case-indicator];
}


listview, message {
  padding: 0.5em;
  border-color: #302d3e;
  border:        5px;
  border-radius: 10px;
  background-color: #302d3e;

  columns: 1;
  lines:   8;
}
listview {
  border:       0px 5px 5px 5px;
  border-radius: 10px 10px 10px 10px;
  spacing: 10px;
  background-color: #302d3e;
  border-color:     #302d3e;
  scrollbar: true;
}


element {
    border:  5px;
    border-radius: 5px;
    padding: 5px;
    border-color: #302d3e;
}
element-text {
    background-color: #302d3e;
    text-color:       #fefffe;
    font: "JetBrains Mono Medium";
}

element normal.normal {
    background-color: #302d3e;
    text-color:       #c62841;
}
element.normal.urgent {
    background-color: #302d3e;
    text-color:       #c62841;
}
element.normal.active {
    background-color: #302d3e;
    text-color:       #c62841;
}
element.selected.normal {
    background-color: #c62841;
    border-color: #c62841;
    text-color:       #c62841;
}
element.selected.urgent {
    background-color: #c62841;
    border-color: #c62841;
    text-color:       #c62841;
}
element.selected.active {
    background-color: #c62841;
    border-color: #c62841;
    text-color:       #c62841;
}
element.alternate.normal {
    background-color: #302d3e;
    text-color:       #c62841;
}
element.alternate.urgent {
    background-color: #302d3e;
    text-color:       #c62841;
}
element.alternate.active {
    background-color: #302d3e;
    text-color:       #c62841;
}


element-text.selected.normal {
    background-color: #c62841;
    border-color: #c62841;
    text-color:       #ddd;
    font: "JetBrains Mono Medium";
}
element-text.selected.urgent {
    background-color: #c62841;
    border-color: #c62841;
    text-color:       #302d3e;
    font: "JetBrains Mono Medium";
}
element-text.selected.active {
    background-color: #c62841;
    border-color: #c62841;
    text-color:       #ddd;
    font: "JetBrains Mono Medium";
}

scrollbar {
    width:        4px ;
    border:       0;
    handle-color: #c62841;
    handle-width: 8px ;
    padding:      0;
}

mode-switcher {
    border:  0px;
    spacing: 0px;
    expand: true;
}
button {
    text-color: #c62841;
    border:       0px 0px 5px ;
    border-color: #302d3e;
    border-radius:    10px 10px 0 0;
    background-color: #302d3e;
    horizontal-align: 0.5;
}
button selected.normal {
    text-color: #c62841;
    margin: 0px;
    padding: 0px;
    border:     5px 5px 5px 5px ;
    border-color: #302d3e;
    border-radius:    10px 10px 10px 10px;
    background-color: #fbd7dc;
}

entry {
    placeholder: "Search here";
    placeholder-color: #302d3e;
    border-color: #fbd7dc;
    background-color: #fbd7dc;
    border:        10px;
    border-radius: 2px 2px 2px 2px;
    text-color: #c62841;
  }
